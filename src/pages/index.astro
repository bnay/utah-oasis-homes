---
import BaseLayout from '../layouts/BaseLayout.astro';
import { homes } from '../data/homes';
import { testimonials } from '../data/testimonials';

const featuredHomes = homes.slice(0, 3);
const featuredTestimonials = testimonials.slice(0, 2);
---

<BaseLayout
  title="Utah Oasis Homes – Custom Luxury Homes in Utah"
  description="Custom luxury homes that feel like private resorts, crafted for Utah’s most inspiring landscapes."
>
  <section class="hero" id="hero">
    <div class="hero-copy">
      <div class="hero-eyebrow">Custom Luxury Homes in Utah</div>
      <h1 class="hero-title">Every Home Should Feel Like an Oasis.</h1>
      <p class="hero-subtitle">
        Utah Oasis Homes designs and builds custom residences that feel like private resorts—crafted
        for Utah’s most breathtaking landscapes.
      </p>
      <div class="hero-ctas">
        <a href="/homes" class="btn btn-primary">View Our Homes</a>
        <a href="/start" class="btn btn-ghost">Start Your Project</a>
      </div>
      <div class="hero-meta">
        <div class="hero-stats">
          <span><strong>Resort-inspired</strong> custom homes</span>
        </div>
        <div class="hero-stats">
          <span>Southern Utah • Wasatch Front</span>
        </div>
      </div>
    </div>

    <div class="hero-image">
      <div class="hero-card">
        <!-- Replace with real photography later -->
        <img
          src="/images/hero.jpg"
          alt="Modern home with pool and view"
          loading="lazy"
        />
      </div>
    </div>
  </section>

  <section class="section" id="differentiators">
    <div class="section-header">
      <h2 class="section-title">What Makes Utah Oasis Different</h2>
      <p class="section-subtitle">
        A building experience centered on calm, clarity, and homes that feel like true retreats.
      </p>
    </div>
    <div class="card-grid">
      <article class="card">
        <h3>Resort-Inspired Design</h3>
        <p>
          Homes that feel like destination retreats—pools, courtyards, and seamless indoor–outdoor
          living.
        </p>
      </article>
      <article class="card">
        <h3>Shaped by the Landscape</h3>
        <p>Desert cliffs, mountain views, and natural light drive every design decision.</p>
      </article>
      <article class="card">
        <h3>Concierge-Level Process</h3>
        <p>A guided, transparent experience from first sketch to final walkthrough.</p>
      </article>
      <article class="card">
        <h3>Timeless Craftsmanship</h3>
        <p>Materials and details selected to age beautifully for decades.</p>
      </article>
    </div>
  </section>

  <section class="section" id="featured-homes">
    <div class="section-header">
      <h2 class="section-title">Selected Homes</h2>
      <p class="section-subtitle">A glimpse at recent Utah Oasis residences.</p>
    </div>
    <div class="card-grid">
      {featuredHomes.map((home) => (
        <article class="card">
          <h3>{home.name}</h3>
          <p style="font-size: 0.8rem; text-transform: uppercase; letter-spacing: 0.12em;">
            {home.location}
          </p>
          <p>{home.headline}</p>
        </article>
      ))}
    </div>
    <div style="margin-top: 1.25rem;">
      <a href="/homes" class="btn btn-ghost">View Full Portfolio</a>
    </div>
  </section>

  <section class="section" id="experience">
    <div class="section-header">
      <h2 class="section-title">A Calm, Clear Building Experience</h2>
      <p class="section-subtitle">
        Building a custom home shouldn’t feel chaotic. Our process keeps you informed, confident,
        and excited at every stage.
      </p>
    </div>
    <div class="card-grid">
      <article class="card">
        <h3>01 — Discover</h3>
        <p>
          We learn your vision, lifestyle, budget, and land so we can design a home around the way
          you live.
        </p>
      </article>
      <article class="card">
        <h3>02 — Design</h3>
        <p>
          Working with trusted architects and designers, we shape a home that captures your
          priorities and maximizes your site.
        </p>
      </article>
      <article class="card">
        <h3>03 — Build</h3>
        <p>
          Transparent schedules, regular updates, and meticulous craft—no surprises, just steady
          progress.
        </p>
      </article>
      <article class="card">
        <h3>04 — Live</h3>
        <p>Step into a completed home that feels like arriving at a resort—every single day.</p>
      </article>
    </div>
  </section>

  <section class="section" id="locations">
    <div class="section-header">
      <h2 class="section-title">Designed for Utah’s Most Inspiring Settings</h2>
      <p class="section-subtitle">
        From red rock desert to mountain ridgelines, Utah Oasis homes are crafted to belong to their
        surroundings.
      </p>
    </div>
    <div class="card-grid">
      <article class="card">
        <h3>Southern Utah & Sand Hollow</h3>
        <p>
          Desert modern and resort-style homes oriented to dramatic cliffs, water, and expansive
          views.
        </p>
      </article>
      <article class="card">
        <h3>Wasatch Front</h3>
        <p>
          Refined custom homes designed for family living, views, and four-season comfort along the
          Wasatch corridor.
        </p>
      </article>
      <article class="card">
        <h3>Resort & View-Oriented Lots</h3>
        <p>
          Homes planned around pools, courtyards, and sightlines so every day feels like a getaway.
        </p>
      </article>
    </div>
  </section>

  <section class="section" id="testimonials">
    <div class="section-header">
      <h2 class="section-title">What Our Clients Say</h2>
      <p class="section-subtitle">
        Most of our new projects come from referrals—here’s how clients describe their experience.
      </p>
    </div>
    <div class="card-grid">
      {featuredTestimonials.map((t) => (
        <article class="card">
          <p style="font-size: 0.9rem; margin-bottom: 0.75rem;">“{t.quote}”</p>
          <p style="font-size: 0.8rem; color: var(--muted);">
            — {t.name}{t.location ? ` • ${t.location}` : ''}
          </p>
        </article>
      ))}
    </div>
  </section>

  <section class="primary-cta" id="primary-cta">
    <h2>Ready to Build Your Oasis?</h2>
    <p>
      Tell us about your land, your vision, and your timeline. We’ll follow up to schedule a
      no-obligation consultation.
    </p>
    <a href="/start" class="btn btn-primary">Start Your Project</a>
  </section>
</BaseLayout>
